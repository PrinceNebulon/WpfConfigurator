<UserControl x:Class="WpfConfiguratorLib.WpfConfigurator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:wpfConfiguratorLib="clr-namespace:WpfConfiguratorLib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <DockPanel DockPanel.Dock="Bottom" LastChildFill="False">
            <Button Margin="2" Padding="6,2" DockPanel.Dock="Right" Click="Cancel_OnClick">Cancel</Button>
            <Button Margin="2" Padding="6,2" DockPanel.Dock="Right" Click="Save_OnClick">Save</Button>
        </DockPanel>
        
        <ScrollViewer>
            <wpfConfiguratorLib:ConfigurationGroup />
        </ScrollViewer>
    </DockPanel>
</UserControl>
