<Window x:Class="WpfConfiguratorTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:view="clr-namespace:WpfConfiguratorLib.view;assembly=WpfConfiguratorLib"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <view:WpfConfigurator Name="WpfConfigurator" 
                                            SaveRequested="WpfConfigurator_OnSaveRequested" 
                                            CancelRequested="WpfConfigurator_OnCancelRequested"
                                            LabelWidthPercentage="30" 
                                            ContentMinWidth="200"/>
    </Grid>
</Window>
